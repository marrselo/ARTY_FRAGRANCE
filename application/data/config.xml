<?xml version="1.0"?>
<configdata>
    <production>
        <constants>
            <version>1.0</version>
        </constants>
        <database>
            <adapter>PDO_MYSQL</adapter>
            <host>localhost</host>
            <username>root</username>
            <password></password>
            <dbname>serpaul</dbname>
